    "lodash-es": "^4.17.21",
    "number-precision": "^1.6.0",
    "pinia": "^2.1.7",
    "tapable": "^2.2.1",
    "uuid": "^8.3.2",
    "view-ui-plus": "^1.3.7",
    "vue": "^3.2.25",
    "vue-i18n": "9.0.0",
    "vue-router": "^4.0.16",
    "vue3-carousel": "^0.3.3",
    "vue3-carousel-3d": "^1.0.4",
    "vue3-lazyload": "^0.3.6"
